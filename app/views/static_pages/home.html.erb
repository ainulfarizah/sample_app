<%= provide :title, t(:home) %>

<h1><%= t(:home) %></h1>
<p>
  This is the home page for the
  <%= link_to "http://www.railstutorial.org" do %>
  Rails Tutorial.
</p>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t(:micropost_feed) %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<% end %>
